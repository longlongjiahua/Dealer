<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="yong.dealer" >

    <permission
        android:name="yong.dealer.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="yong.dealer.permission.C2D_MESSAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but are recommended.
    -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name="yong.dealer.chat.Common"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <provider
            android:name="yong.dealer.shopping.data.ShoppingProvider"
            android:authorities="yong.dealer.shopping"
            android:exported="false" >
        </provider>

        <activity android:name="yong.dealer.shopping.ShoppingActivity"
            android:theme="@style/Theme.AppCompat.Light"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="yong.dealer.login.Register"
            android:label="@string/app_name">

        </activity>

        <activity android:name="yong.dealer.login.Registered"
            android:label="@string/app_name">

        </activity>


        <activity android:name="yong.dealer.login.Main"
            android:label="Login">

        </activity>

        <activity android:name="yong.dealer.login.PasswordReset"
            android:label="@string/app_name">

        </activity>
        <activity android:name="yong.dealer.login.ChangePassword"
            android:label="@string/app_name">

        </activity>


        <activity
            android:name="yong.dealer.LocalTraderActivity"
            android:label="@string/title_activity_maps" >

        </activity>
        <activity
            android:name="yong.dealer.ShowFoursquareActivity"
            android:label="showplaces" >
        </activity>

        <provider
            android:name="yong.dealer.chat.DataProvider"
            android:authorities="yong.dealer.chat.provider"
            android:exported="false" >
        </provider>

        <receiver
            android:name="yong.dealer.chat.client.GcmBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />

                <category android:name="com.appsrox.instachat" />
            </intent-filter>
        </receiver>

        <activity
            android:name="yong.dealer.chat.MainActivity"
            android:label="Chat" >
        </activity>
        <activity
            android:name="yong.dealer.chat.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="yong.dealer.chat.ChatActivity"
            android:logo="@drawable/ic_contact_picture" >
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".MaptestActivity"
            android:label="@string/title_activity_maptest" >
        </activity>

    </application>

</manifest>
